<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/titreFiche"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Titre"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/realisateurFiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RÃ©alisateur"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dateSortie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dateSortie"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/limitFiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LimiteAge"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nbrExemplaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NbExemplaire"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/acteurFiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/descriptionFiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Louer le film"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/louerfilm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/memo"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/memoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enregistrer" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/red1" />

    </RelativeLayout>

</ScrollView>
